# Production Environment Variables
# Rename this file to .env.local on the production server
# DO NOT commit the actual .env.local file with real credentials to git

# Database Configuration
DB_HOST=localhost
DB_USER=onlyoman_snap_user
DB_PASSWORD=your-secure-database-password-here
DB_NAME=onlyoman_snap

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/snap?retryWrites=true&w=majority
MONGODB_DB_NAME=snap

# JWT Secret
JWT_SECRET=your-secure-jwt-secret-key-change-in-production

# Environment
NODE_ENV=development

# Optional: Port (default is 3000)
PORT=3000 